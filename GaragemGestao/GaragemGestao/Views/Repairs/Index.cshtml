@model IEnumerable<GaragemGestao.Data.Entities.Repair>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @if (this.User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.User.FullName)
                </th>
            }

            <th>
                @Html.DisplayNameFor(model => model.RepairDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lines)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Issue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>

            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            @if (this.User.IsInRole("Admin"))
            {
                <th>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </th>

            }
            <th>
                @Html.DisplayFor(modelItem => item.RepairDate)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Lines)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Quantity)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Issue)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Value)
            </th>
            @if (this.User.IsInRole("Admin"))
            {
        <td>
            <a asp-action="Deliver" asp-route-id="@item.Id" class="btn btn-info" id="btnDeliver">Deliver Vehicle to Customer</a> |
            <a asp-action="DeleteItem" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete">Cancel Repair</a>
            <a asp-action="EditDetails" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete">Insert Delivery Date</a>
        </td>
            }
            @if (this.User.IsInRole("Client"))
            {
                <td>|
                    <a asp-action="DeleteItem" asp-route-id="@item.Id" class="btn btn-danger" id="btnDelete">Cancel Repair</a>
                </td>
            }

        </tr>
        }
    </tbody>
</table>
