@model GaragemGestao.Models.RegisterNewUserViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>

<!-- form section start -->
<section class="w3l-hotair-form">
    <h1>Garage Management - André Pires</h1>
    <div class="container">
        <!-- /form -->
        <div class="workinghny-form-grid">
            <div class="main-hotair">
                <div class="content-wthree">
                    <h2>Log In</h2>
                    <form id="form-login" method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group" style="width: 350px">
                            <label asp-for="FirstName">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-warning"></span>
                            <label asp-for="LastName">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-warning"></span>
                            <label asp-for="UserName">Username</label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-warning"></span>
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-warning"></span>
                            <label asp-for="Confirm">Confirm</label>
                            <input asp-for="Confirm" type="password" class="form-control" />
                            <span asp-validation-for="Confirm" class="text-warning"></span>
                            <button class="btn" type="submit" value="Register New User">Register</button>
                        </div>

                    </form>

                    <p class="account"> <a asp-action="Login" class="btn btn-primary">Do you have an Account?</a></p>
                </div>
                <div class="w3l_form align-self" style="width: 400px" >
                    <div class="left_grid_info">
                        <img src="~/images/1.png" alt="" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
        <!-- //form -->
    </div>
</section>
<!-- //form section start -->
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

